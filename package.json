{
  "name": "papdaew-auth-service",
  "version": "1.0.0",
  "type": "commonjs",
  "description": "Authentication service",
  "main": "src/app.js",
  "scripts": {
    "start": "NODE_ENV=production pm2 start src/app.js -i 5 --attach --watch",
    "stop": "pm2 stop all",
    "delete": "pm2 delete all",
    "dev": "npm run db:migrate && nodemon src/app.js",
    "test": "NODE_ENV=test jest --coverage=true -w=1 --forceExit --detectOpenHandles --watchAll=false",
    "lint:check": "eslint 'src/**/*.js'",
    "lint:fix": "eslint 'src/**/*.js' --fix",
    "format:check": "prettier --check 'src/**/*.{js,json}'",
    "format:fix": "prettier --write 'src/**/*.{js,json}'",
    "build": "npm ci --only=production",
    "prepare": "husky",
    "db:migrate": "prisma migrate deploy",
    "db:studio": "prisma studio --browser none",
    "db:generate": "prisma generate",
    "db:seed": "prisma db seed"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "author": "Papdaew",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/PomPerWoW/papdaew-auth.git"
  },
  "bugs": {
    "url": "https://github.com/PomPerWoW/papdaew-auth/issues"
  },
  "imports": {
    "#auth/*": "./src/*"
  },
  "homepage": "https://github.com/PomPerWoW/papdaew-auth#readme",
  "dependencies": {
    "@papdaew/shared": "^0.2.6",
    "@prisma/client": "^6.4.1",
    "ajv": "^8.17.1",
    "ajv-formats": "^3.0.1",
    "amqplib": "^0.10.5",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.0",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-session": "^1.18.1",
    "helmet": "^8.0.0",
    "hpp": "^0.2.3",
    "http-status-codes": "^2.3.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "passport": "^0.7.0",
    "passport-google-oauth20": "^2.0.0",
    "pm2": "^5.4.3",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.3",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.5.1",
    "prisma": "^6.4.1",
    "supertest": "^7.0.0"
  }
}
